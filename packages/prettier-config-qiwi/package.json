{
  "name": "prettier-config-qiwi",
  "version": "1.3.1",
  "description": "Prettier rules related to QIWI projects",
  "main": "src/main/js/index",
  "scripts": {
    "build": "echo 'build is not required' || exit 0",
    "test": "yarn jest",
    "test:report": "yarn test && yarn coveralls:push",
    "jest": "jest -w=1 --config=jest.config.json",
    "coveralls:push": "cat ./coverage/lcov.info | coveralls",
    "docs": "typedoc --options ./typedoc.json ./src/main"
  },
  "files": [
    "README.md",
    "CHANGELOG.md",
    "src/main"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/qiwi/lint-config-qiwi.git"
  },
  "keywords": [
    "eslint-config-qiwi"
  ],
  "bugs": {
    "url": "https://github.com/qiwi/lint-config-qiwi/issues"
  },
  "homepage": "https://github.com/qiwi/lint-config-qiwi#readme",
  "author": "QIWI <opensource@qiwi.com>",
  "license": "MIT",
  "devDependencies": {
    "@swissquote/crafty-preset-jest": "^1.13.7",
    "coveralls": "^3.1.0",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
    "stdstream-snapshot": "^1.2.5",
    "trim-right": "^1.0.1",
    "ts-jest": "^26.4.4",
    "typescript": "^4.1.2"
  },
  "release": {
    "branch": "master",
    "verifyConditions": [
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/git"
    ],
    "prepare": [
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/git"
    ],
    "publish": [
      "@semantic-release/npm",
      "@semantic-release/github"
    ]
  },
  "peerDependencies": {},
  "optionalDependencies": {},
  "dependencies": {}
}
