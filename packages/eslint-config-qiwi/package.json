{
  "name": "eslint-config-qiwi",
  "version": "1.0.0",
  "description": "ESLint rules related to QIWI projects",
  "main": "src/main/js/eslint-config-qiwi.js",
  "scripts": {
    "build": "echo 'build is not required' || exit 0",
    "test": "yarn test:spec",
    "test:gen": "GENERATE_ASSETS=true yarn jest",
    "test:spec": "yarn jest",
    "test:report": "yarn test && yarn coveralls:push",
    "jest": "jest -w=1 --config=jest.config.json",
    "coveralls:push": "cat ./coverage/lcov.info | coveralls",
    "lint": "eslint --config src/main/js/eslint-config-qiwi.js src/main/js/eslint-config-qiwi.js"
  },
  "files": [
    "README.md",
    "CHANGELOG.md",
    "src/main"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/qiwi/tslint-config-qiwi.git"
  },
  "keywords": [
    "eslint-config-qiwi"
  ],
  "bugs": {
    "url": "https://github.com/qiwi/tslint-config-qiwi/issues"
  },
  "homepage": "https://github.com/qiwi/tslint-config-qiwi#readme",
  "author": "Dima Livshits <d.livshits@qiwi.com>",
  "license": "MIT",
  "devDependencies": {
    "@semantic-release/changelog": "^3.0.4",
    "@semantic-release/git": "^7.0.16",
    "@semantic-release/github": "^5.4.3",
    "@semantic-release/npm": "^5.1.15",
    "@types/jest": "^24.0.18",
    "@typescript-eslint/eslint-plugin": "^2.3.0",
    "@typescript-eslint/parser": "^2.3.0",
    "coveralls": "^3.0.6",
    "eslint": "^6.4.0",
    "jest": "^24.9.0",
    "semantic-release": "^15.13.24",
    "ts-jest": "^24.1.0",
    "typescript": "^3.6.3",
    "@swissquote/crafty-preset-jest": "^1.8.0"
  },
  "release": {
    "branch": "master",
    "verifyConditions": [
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/git"
    ],
    "prepare": [
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/git"
    ],
    "publish": [
      "@semantic-release/npm",
      "@semantic-release/github"
    ]
  },
  "dependencies": {
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-node": "^10.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.14.3",
    "eslint-plugin-react-hooks": "^2.0.1",
    "eslint-plugin-standard": "^4.0.1"
  }
}
