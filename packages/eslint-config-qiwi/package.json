{
  "name": "eslint-config-qiwi",
  "version": "2.0.4",
  "description": "ESLint rules related to QIWI projects",
  "main": "src/main/js/eslint-config-qiwi.js",
  "scripts": {
    "build": "yarn docs",
    "test": "yarn test:spec",
    "test:u": "yarn jest --updateSnapshot",
    "test:spec": "jest -w=1 --config=jest.config.json",
    "test:report": "yarn test && yarn coveralls:push",
    "lint": "eslint src",
    "format": "eslint --fix src; prettier --write src",
    "docs": "typedoc"
  },
  "files": [
    "README.md",
    "CHANGELOG.md",
    "src/main"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/qiwi/lint-config-qiwi.git"
  },
  "keywords": [
    "eslint-config-qiwi"
  ],
  "bugs": {
    "url": "https://github.com/qiwi/lint-config-qiwi/issues"
  },
  "homepage": "https://github.com/qiwi/lint-config-qiwi#readme",
  "author": "QIWI <opensource@qiwi.com>",
  "license": "MIT",
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "^5.46.0",
    "@typescript-eslint/parser": "^5.46.0",
    "eslint-plugin-react": "^7.31.11",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-sonarjs": "^0.17.0",
    "eslint-plugin-unicorn": "^45.0.1"
  },
  "peerDependencies": {
    "eslint": "*"
  },
  "devDependencies": {
    "@qiwi/lint-config-infra": "2.0.1",
    "@qiwi/stdstream-snapshot": "^1.2.9",
    "@swissquote/crafty-preset-jest": "^1.20.0",
    "@types/jest": "^29.2.4",
    "eslint": "^8.28.0",
    "jest": "^29.3.1",
    "ts-jest": "^29.0.3"
  }
}
